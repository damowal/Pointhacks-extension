{
  "name": "Point Hacks AutoFill",
  "description": "Point Hacks credit card application auto-fill for ANZ, NAB, CBA, Westpac, and American Express Australia.",
  "version": "2.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "https://api.addressify.com.au/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "818312745540-msbdo8e6njc0tqko98mbvdko42bod1f7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Point Hacks AutoFill",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.anz.com.au/*",
        "https://*.anz.com/*",
        "https://*.nab.com.au/*",
        "https://*.commbank.com.au/*",
        "https://*.westpac.com.au/*",
        "https://www.ui.westpac.com.au/*",
        "*://*.ui.westpac.com.au/*",
        "https://*.americanexpress.com/*",
        "https://*.americanexpress.com.au/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}
